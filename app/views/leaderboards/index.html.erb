<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5>排行榜列表</h5>
      </div>
      <div class="col-sm-2">
        <%= link_to "新建排行榜", new_leaderboard_path, class: "btn btn-success pull-right" %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>排行榜名</th>
          <th>所属游戏</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @leaderboards.each do |leaderboard| %>
          <tr>
            <td><%= link_to leaderboard.id, leaderboard %></td>
            <td><%= leaderboard.name %></td>
            <td><%= leaderboard.game.try(:name) %></td>
            <td>
              <%= link_to "编辑", edit_leaderboard_path(leaderboard), class: "btn btn-xs btn-primary" %>
              <%= link_to "删除", leaderboard_path(leaderboard), method: :delete, class: "btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

