<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5><%= @leaderboard.name %></h5>
      </div>
      <div class="col-sm-2">
        <h5 style="text-align: right;">玩家数：<%= @leaderboard.scores.count %></h5>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>玩家</th>
          <th>分数信息</th>
          <th>排名</th>
          <th>最后更新</th>
        </tr>
      </thead>

      <tbody>
        <% @scores.each do |score| %>
          <tr>
            <td><%= score.id %></td>
            <td><%= player_avatar_tag(score.player) %></td>
            <td>
              <p><%= score.player.try(:nickname) || '匿名' %></p>
              <p><%= score.value %></p>
            </td>
            <td><%= score.rank %></td>
            <td><%= score.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<div style="text-align: center;"><%= will_paginate @scores, renderer: BootstrapPagination::Rails %></div>

