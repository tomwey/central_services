<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5>广告统计列表</h5>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>所属广告</th>
          <th>所属App</th>
          <th>View At</th>
          <th>Click At</th>
          <th>Load Error</th>
          <th>设备信息</th>
          <th>语言</th>
          <th>At</th>
        </tr>
      </thead>

      <tbody>
        <% @tracks.each do |track| %>
          <tr>
            <td><%= track.id %></td>
            <td><%= track.ad.try(:title) %></td>
            <td><%= "#{track.app.name} - #{track.app.platform}" if track.app %></td>
            <td><%= track.impression %></td>
            <td><%= track.click %></td>
            <td><%= track.error_message %></td>
            <td><%= "【#{track.model}】#{track.platform} #{track.os_version}" if track.model %></td>
            <td><%= "#{track.language_code}_#{track.country_code}" %></td>
            <td><%= local_time(track.created_at) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<div style="text-align: center;"><%= will_paginate @tracks, renderer: BootstrapPagination::Rails %></div>

