<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5><%= @wiki.title %></h5>
      </div>
      <div class="col-sm-2">
        <div style="text-align:right; margin-top: 8px;">
          <%= link_to "删除", wiki_path(@wiki), method: :delete, data: { confirm: "您确定吗？" }, class: "btn btn-xs btn-danger" %>
          <%= link_to "编辑", edit_wiki_path(@wiki), class: "btn btn-xs btn-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="col-sm-12 doc-container">
      <%= raw @wiki.body %>
    </div>
  </div>
  
  <div class="panel-footer">
    <div style="text-align:right;">
      <%= link_to "删除", wiki_path(@wiki), method: :delete, data: { confirm: "您确定吗？" }, class: "btn btn-xs btn-danger" %>
      <%= link_to "编辑", edit_wiki_path(@wiki), class: "btn btn-xs btn-primary" %>
    </div>
  </div>
  
</div>