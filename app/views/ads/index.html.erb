<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-10">
        <h5>广告列表</h5>
      </div>
      <div class="col-sm-2">
        <%= link_to "新建广告", new_ad_path, class: "btn btn-success pull-right" %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>广告类型</th>
          <th>标题</th>
          <th>内容</th>
          <th>所属App</th>
          <th>Link</th>
          <th>按钮</th>
          <th>语言</th>
          <th>At</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @ads.each do |ad| %>
          <tr>
            <td><%= ad.id %></td>
            <td><%= ad.ad_type %></td>
            <td><%= ad.title %></td>
            <td><%= ad.message %></td>
            
            <td>
              <ul>
                <% ad.apps.each do |app| %>
                <li><%= app.name %></li>
                <% end %>
              </ul>
            </td>
            <td><%= ad.link %></td>
            <td><%= ad.button_titles %></td>
            <td><%= ad.lang %></td>
            <td><%= local_time(ad.created_at) %></td>
            <td>
              <%= link_to "编辑", edit_ad_path(ad), class: "btn btn-xs btn-primary" %>
              <%= link_to "删除", ad_path(ad), method: :delete, data: { confirm: "您确定吗？" }, class: "btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

